/* pages/news-detail/news-detail.wxss */

.news-detail-container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 340rpx;
}

.author{
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 20rpx;
}

.author-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.author-avatar {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #666;
}

.publish-text {
  font-size: 30rpx;
  color: #999;
  margin-left: 30rpx;
}

.author-date {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.article-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #4b556c;
  margin-bottom: 10px;
  margin-top: 30rpx;
  margin-left: 30rpx;
  letter-spacing: 2px;
}

.collection-and-comment {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 40rpx;
  vertical-align: middle;
}

.collection-and-comment image {
  width: 50rpx;
  height: 50rpx;
}

.comment{
  margin-left: 30rpx;
}

.article-detail{
  color: #666;
  margin-top: 25rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 24rpx;
}
