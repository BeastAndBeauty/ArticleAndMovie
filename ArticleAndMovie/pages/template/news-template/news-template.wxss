@import '../star-template/star-template.wxss';

.article-list {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding: 10px;
  padding-bottom: 5px;
}

.author-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.author-avatar {
  margin-left: 20rpx;
}

.author-date {
  margin-left: 20rpx;
  font-size: 26rpx;
}

.article-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 10px;
}

.article-image {
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.article-contect {
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.article-collectation-icon {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.article-collection-amount {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
}

.article-comment-icon {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  margin-left: 15px;
  vertical-align: middle;
}

.artcle-comment-amount {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
}
